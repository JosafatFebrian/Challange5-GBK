    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toStartOf="@+id/gd_v_3"
        app:layout_constraintStart_toStartOf="@+id/gd_v_1"
        app:layout_constraintTop_toTopOf="@+id/gd_h_1" />

    <ImageView
        android:id="@+id/refresh"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:src="@drawable/refresh"
        app:layout_constraintEnd_toStartOf="@+id/gd_v_3"
        app:layout_constraintTop_toBottomOf="@+id/close" />

    <ImageView
        android:id="@+id/close"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:src="@drawable/close"
        app:layout_constraintEnd_toStartOf="@+id/gd_v_3"
        app:layout_constraintTop_toTopOf="@+id/gd_h_1" />-->

    <TextView
        android:id="@+id/pemain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pemain"
        android:textColor="#7D513B"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/gd_h_6"
        app:layout_constraintEnd_toStartOf="@+id/gd_v_3"
        app:layout_constraintStart_toStartOf="@+id/gd_v_1" />


    <ImageView
        android:id="@+id/player_gunting"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:src="@drawable/gunting"
        app:layout_constraintBottom_toTopOf="@+id/gd_h_4"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/gd_v_3"
        app:layout_constraintStart_toStartOf="@+id/gd_v_1"
        app:layout_constraintTop_toTopOf="@+id/gd_h_4" />

    <ImageView
        android:id="@+id/player_batu"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:src="@drawable/batu"
        app:layout_constraintBottom_toTopOf="@+id/gd_h_2"
        app:layout_constraintEnd_toStartOf="@+id/gd_v_3"
        app:layout_constraintStart_toStartOf="@+id/gd_v_1"
        app:layout_constraintTop_toTopOf="@+id/gd_h_2" />


    <ImageView
        android:id="@+id/player_kertas"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:src="@drawable/kertas"
        app:layout_constraintBottom_toTopOf="@+id/gd_h_5"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/gd_v_3"
        app:layout_constraintStart_toStartOf="@+id/gd_v_1"
        app:layout_constraintTop_toTopOf="@+id/gd_h_5" />


